@{
  Layout = "_Layout";
}

@model LibraryCatalog.Models.Author

<div class ="col-md-8 offset-md-2">
  <div class="card">
    <div class="card-body">
      @using (Html.BeginForm())
      {
        @Html.Label("Author's Name: ")
        @Html.TextBoxFor(model => model.AuthorName, new { @class = "form-control" , required = "required"})
        <br>
        <input type="submit" value="Add author" class="btn btn-dark">
      }
    </div>
  </div>
</div>