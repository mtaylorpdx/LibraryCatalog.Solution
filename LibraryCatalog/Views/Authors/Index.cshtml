@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models;
@model List<LibraryCatalog.Models.Author>;

@if (@Model.Count ==0)
{
  <h3>No authors have been added.</h3>
}
<hr>
<h3>Authors in the database: </h3>
<div class="col-md-8 offset-m-2">
  <hr>
  @foreach (Author author in Model)
  {
    <p>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</p>
    <hr>
  }
</div>

<p class="btn btn-dark">@Html.ActionLink("Add new author", "Create")</p>